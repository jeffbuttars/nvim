#!/bin/bash

source pkgs.sh
source nvimenv.sh
source in_up.sh

source buildycm.sh

pr_info "Updating plugs..."
nvim -c 'PlugUpgrade' -c '<\CR>' -c 'qa'
# nvim -c 'PlugClean' -c '<\CR>' -c 'qa'
nvim -c 'PlugUpdate' -c '<\CR>' -c 'qa'
wait

pr_info "Updating Remote Plugins..."
nvim -c 'UpdateRemotePlugins<\CR>' -c "qa"
wait
